[user]
  name = kriita
  email = thordask@gmail.com

[core]
  editor = nvim
  whitespace = fix,trailing-space,cr-at-eol
  pager = delta

[color]
  ui = true

[diff]
  tool = nvimdiff

[difftool]
  prompt = true

[pull]
  rebase = true

[url "git@github.com:"]
  insteadOf = https://github.com/

[fetch]
  prune = true

[alias]
  delete-local-merged = "!git fetch && git branch --merged | egrep -v 'master|develop|main|staging'  | xargs git branch -d"

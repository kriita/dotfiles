# Editor
alias vim=nvim

# ZSH
alias zshconfig="nvim ~/.config/zsh/.zshrc"
alias zshfunctions="nvim ~/.config/zsh/custom-functions.sh"
alias zshalias="nvim ~/.config/zsh/.zshalias"
alias zshenv="nvim ~/.config/zsh/.zshenv"

# Vim
alias vimrc="nvim ~/.config/init.vim"

# Syntastic sugar for ls
alias ls="lsd"
alias l="lsd -lh"
alias ll="lsd -lah"
alias lls="lsd -Slah"
alias llsr="lsd -Slahr"

# Copy
# Confirm before overwriting things
alias cp="cp -i"
alias mv="mv -i"

# Git
alias ga="git add"
alias gc="git commit"
alias gcm="git commit --amend"
alias gd="git diff"
alias gds="git diff --staged"
alias gs="git status"
alias gl="git log"
alias glg="git log --graph"
alias glo="git log --oneline"
alias gck="git checkout"
alias gckb="git checkout -b"
alias gsw="git switch"
alias gswc="git switch --create"
alias gsh="git show"

# Editor
alias vim=nvim

# ZSH
alias zshconfig="nvim ~/.config/zsh/.zshrc"
alias zshfunctions="nvim ~/.config/zsh/custom-functions.sh"
alias zshalias="nvim ~/.config/zsh/.zshalias"
alias zshenv="nvim ~/.config/zsh/.zshenv"
alias zprofile="nvim ~/.config/zsh/.zprofile"

# Vim
alias vimrc="nvim ~/.config/nvim"

# G++ flags
alias compile_strict="g++ -std=c++20 -Wall -Wextra -Werror -Wshadow -Wno-reorder -Wno-unused-parameter -Wnon-virtual-dtor -pedantic -pedantic-errors"

# Syntastic sugar for ls
alias l="lsd -lh"
alias ls="lsd"
alias ll="lsd -lah"
alias lls="lsd -Slah"
alias llsr="lsd -Slahr"

# Copy
# Confirm before overwriting things
alias cp="cp -i"
alias mv="mv -i"

# Git
alias ga="git add"
alias gc="git commit"
alias gcm="git commit --amend"
alias gd="git diff"
alias gds="git diff --staged"
alias gs="git status"
alias gl="git log"
alias glg="git log --graph"
alias glo="git log --oneline"
alias gck="git checkout"
alias gckb="git checkout -b"
alias gsw="git switch"
alias gswc="git switch --create"
alias gsh="git show"

# Ctags
alias ctags="`brew --prefix`/bin/ctags"
